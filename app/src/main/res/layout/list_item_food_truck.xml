<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp">

    <TextView
        android:id="@+id/tvFoodTruckName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Anas Goodies Catering"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvFoodTruckLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2145 MARKET ST"
        app:layout_constraintTop_toBottomOf="@id/tvFoodTruckName"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tvFoodDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Acai Bowls, Smoothies and Juices"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tvFoodTruckLocation"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvFoodTruckHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="10AM-2PM"
        app:layout_constraintTop_toBottomOf="@id/tvFoodDetails"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:textSize="14sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>